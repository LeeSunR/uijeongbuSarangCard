<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListFragment">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_list_address"
            android:text="의정부시"
            android:padding="10dp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_location"
            android:background="@drawable/ic_my_location_black_24dp"
            android:backgroundTint="#FFF"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_list_result"
                android:text="검색결과 : 341건"
                android:padding="10dp"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_text_list_search"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:id="@+id/btn_list_search"
            android:background="@drawable/ic_search_black_24dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/radio_grp_list_kind"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:text="전체"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="음식점"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="마트"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_mart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="편의점"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_convenience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="병원"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="약국"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_drugstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="주유소"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_gas_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="숙박"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="문화/취미"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:text="미용/보건"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="레저"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_box_style"
                android:id="@+id/radio_btn_leisure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </HorizontalScrollView>
    <ListView
        android:id="@+id/listview_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>