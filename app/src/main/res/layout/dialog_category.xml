<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:text="전체"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/text_selected"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_main_category"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_marginEnd="20dp"
            android:layout_marginVertical="30dp"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/bg_corner_4dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_select_done"
            app:layout_constraintEnd_toStartOf="@id/rcy_sub_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_selected" />

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/rcy_sub_category"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_marginVertical="30dp"
            android:background="@drawable/bg_corner_4dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_select_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rcy_main_category"
            app:layout_constraintTop_toBottomOf="@+id/text_selected" />

        <Button
            android:id="@+id/btn_select_done"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="선택 완료"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>